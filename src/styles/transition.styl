.bounce-enter-active,
.bounce-leave-active,
.slide-fade-enter-active,
.slide-fade-leave-active
  absolute(left top)
  size 100%

.bounce-enter-active, .slide-fade-enter-active
  z-index 1

.slide-fade-leave-active, .bounce-leave-active
  z-index -1

.bounce-enter-active
  animation bounce-in .5s

.bounce-leave-active
  animation bounce-out .5s

@keyframes bounce-in
  from
    transform scale(0)

  50%
    transform scale(1.5)

  to
    transform scale(1)

@keyframes bounce-out
  from
    transform scale(1)

  50%
    transform scale(1.5)

  to
    transform scale(0)

.slide-fade-enter-active, .slide-fade-leave-active
  transition all .8s ease

.slide-fade-enter, .slide-fade-leave-active
  transform translateX(200%)
  opacity 0
